{
  "name": "itn-vscode",
  "displayName": "Interfaces with Annotations",
  "description": "Syntax highlighting for .intertation files (.itn)",
  "version": "0.0.1",
  "main": "./dist/extension.js",
  "scripts": {
    "build": "vite build",
    "test": "vitest"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "intertation",
        "aliases": [
          "ITN",
          "Annotated Data Structure"
        ],
        "extensions": [
          ".intertation",
          ".itn"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "intertation",
        "scopeName": "source.intertation",
        "path": "./syntaxes/intertation.tmLanguage.json"
      }
    ]
  },
  "publisher": "prostojs",
  "dependencies": {
    "intertation": "file:../intertation",
    "vscode-languageclient": "^8.1.0",
    "vscode-languageserver": "^8.1.0",
    "vscode-languageserver-textdocument": "^1.0.12"
  },
  "author": "Artem Maltsev",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^22.10.5",
    "@types/vscode": "^1.96.0",
    "vite": "^6.0.6",
    "vitest": "^2.1.8"
  }
}
