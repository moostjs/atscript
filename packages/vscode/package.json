{
  "name": "@ts-anscript/vscode",
  "displayName": "Anscript",
  "description": "Provides syntax highlighting and language support for Anscript (.as), a language for describing data and interfaces with extensible annotations.",
  "version": "0.0.11",
  "private": true,
  "main": "./dist/extension.cjs",
  "icon": "./icons/as-logo.png",
  "build": [
    {
      "format": "cjs",
      "entries": [
        "client/extension.ts"
      ],
      "external": [
        "fs",
        "path",
        "vscode",
        "child_process"
      ],
      "dts": false
    },
    {
      "format": "cjs",
      "entries": [
        "server/server.ts"
      ],
      "external": [
        "fs",
        "path",
        "@ts-anscript/core"
      ],
      "dts": false
    }
  ],
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "anscript",
        "aliases": [
          "as",
          "anscript",
          "Annotate Things"
        ],
        "extensions": [
          ".as"
        ],
        "icon": {
          "light": "./icons/as-file.svg",
          "dark": "./icons/as-file.svg"
        },
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "anscript",
        "scopeName": "source.anscript",
        "path": "./syntaxes/anscript.tmLanguage.json"
      }
    ],
    "configurationDefaults": {
      "explorer.fileNesting.enabled": true,
      "explorer.fileNesting.patterns": {
        "*.as": "${capture}.as.d.ts"
      }
    }
  },
  "publisher": "mav-rik",
  "dependencies": {
    "@ts-anscript/core": "workspace:^"
  },
  "author": "Artem Maltsev",
  "license": "ISC",
  "devDependencies": {
    "vscode-languageclient": "^8.1.0",
    "vscode-languageserver": "^8.1.0",
    "vscode-languageserver-textdocument": "^1.0.12",
    "@types/node": "^22.10.5",
    "@types/vscode": "^1.80.0",
    "vitest": "^3.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ts-anscript/anscript.git"
  },
  "scripts": {
    "package": "pnpm vsce package --no-dependencies",
    "publish": "pnpm vsce publish --no-dependencies",
    "test": "vitest"
  }
}
