{
  "name": "@anscript/vscode",
  "displayName": "Interfaces with Annotations",
  "description": "Syntax highlighting for anscript (.as)",
  "version": "0.0.1",
  "private": true,
  "main": "./dist/extension.js",
  "scripts": {
    "build": "vite build",
    "test": "vitest"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "anscript",
        "aliases": [
          "as",
          "anscript",
          "Annotated Data Structure"
        ],
        "extensions": [
          ".anscript",
          ".as"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "anscript",
        "scopeName": "source.anscript",
        "path": "./syntaxes/anscript.tmLanguage.json"
      }
    ]
  },
  "publisher": "moost",
  "dependencies": {
    "@anscript/core": "workspace:^",
    "vscode-languageclient": "^8.1.0",
    "vscode-languageserver": "^8.1.0",
    "vscode-languageserver-textdocument": "^1.0.12"
  },
  "author": "Artem Maltsev",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^22.10.5",
    "@types/vscode": "^1.96.0",
    "vite": "^6.0.6",
    "vitest": "^2.1.8"
  }
}
