{
  "name": "@anscript/vscode",
  "displayName": "Anscript: Annotate things",
  "description": "Provides syntax highlighting and language support for Anscript (.as), a language for describing data and interfaces with extensible annotations.",
  "version": "0.0.2",
  "private": true,
  "main": "./dist/extension.cjs",
  "build": {
    "format": "cjs",
    "entries": [
      "client/extension.ts",
      "server/server.ts"
    ],
    "dts": false
  },
  "scripts": {
    "test": "vitest"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "anscript",
        "aliases": [
          "as",
          "anscript",
          "Annotate things"
        ],
        "extensions": [
          ".as"
        ],
        "icon": {
          "light": "./icons/as-file.svg",
          "dark": "./icons/as-file.svg"
        },
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "anscript",
        "scopeName": "source.anscript",
        "path": "./syntaxes/anscript.tmLanguage.json"
      }
    ],
    "configurationDefaults": {
      "explorer.fileNesting.enabled": true,
      "explorer.fileNesting.patterns": {
        "*.as": "${capture}.as.d.ts"
      }
    }
  },
  "publisher": "moost",
  "dependencies": {
    "@anscript/core": "workspace:^",
    "vscode-languageclient": "^8.1.0",
    "vscode-languageserver": "^8.1.0",
    "vscode-languageserver-textdocument": "^1.0.12"
  },
  "author": "Artem Maltsev",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^22.10.5",
    "@types/vscode": "^1.96.0",
    "vitest": "^3.0.0"
  }
}